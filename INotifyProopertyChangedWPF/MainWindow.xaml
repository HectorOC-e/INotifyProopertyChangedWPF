<Window x:Class="INotifyProopertyChangedWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:INotifyProopertyChangedWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="Nombre" HorizontalAlignment="Center"></Label>
        <TextBox Width="100" Height="30" Margin="0,0,0,10" Text="{Binding Path=Nombre, Mode=TwoWay}"></TextBox>
        <Label Content="Primer Apellido" HorizontalAlignment="Center"></Label>
        <TextBox Width="100" Height="30" Margin="0,0,0,10" Text="{Binding Path=Apellido, Mode=TwoWay}"></TextBox>
        <Label Content="Nombre Completo" HorizontalAlignment="Center"></Label>
        <TextBox Width="100" Height="30" Margin="0,0,0,10" Text="{Binding Path=NombreCompleto, Mode=TwoWay}"></TextBox>
    </StackPanel>
</Window>
